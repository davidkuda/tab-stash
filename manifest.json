{
  "manifest_version": 3,
  "name": "TabStash",
  "description": "Collapse all tabs into a grouped list by domain.",
  "version": "0.1.0",
  "permissions": ["tabs", "storage"],
  "action": { "default_title": "Save all tabs" },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "web_accessible_resources": [{
    "resources": ["overview/*"],
    "matches": ["<all_urls>"]
  }],
  "icons": {
    "16": "icons/16.png",
    "32": "icons/32.png",
    "180": "icons/180.png"
  }
}
